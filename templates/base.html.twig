<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Visual Novel Web Creator!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <link href="{{ asset('css/font.css') }}" rel="stylesheet" />
            <link href="{{ asset('css/general.css') }}" rel="stylesheet" />
            <link href="{{ asset('css/footer.css') }}" rel="stylesheet" />
            <link href="{{ asset('css/navigation.css') }}" rel="stylesheet" />
            <link href="{{ asset('css/form.css') }}" rel="stylesheet" />
            <link href="{{ asset('css/ribbon.css') }}" rel="stylesheet" />
            <link href="{{ asset('css/pagination.css') }}" rel="stylesheet" />
            <link href="{{ asset('js/fontawesome-5.15.3/css/all.css') }}" rel="stylesheet" />
            <script src="{{ asset('js/form.js') }}" type="text/javascript"></script>
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        {% block body %}{% endblock %}
        {% if app.request.session.get('userid') == null %} 
            {% embed "login.html.twig" %}{% endembed %}
        {% endif %}
        {% embed "footer.html.twig" %}{% endembed %}
    </body>
</html>
